mixin svgCorner
  svg(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 100 100', preserveaspectratio='none', width='100%', height='100%')
    path(fill-rule='evenodd', clip-rule='evenodd', d='M0 0 H100 L100 0 0 100 v0 z')

